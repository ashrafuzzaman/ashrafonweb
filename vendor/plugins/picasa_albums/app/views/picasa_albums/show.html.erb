<% content_for :body_content_title do %>
  <%= @picasa_album.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @picasa_album.title %>
  </div>
  
  <div>
    <h3>Image Per Page</h3>
    <%= @picasa_album.image_per_page %>
  </div>
  
  <div>
    <h3>Description</h3>
    <%= @picasa_album.description %>
  </div>
  
  <div>
    <h3>Album Url</h3>
    <%= @picasa_album.album_url %>
  </div>
  
  <div>
    <h3>Active</h3>
    <%= @picasa_album.active %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="picasa_albums">
    <% @picasa_albums.each do |picasa_album| %>
      <li>
        <%= link_to picasa_album.title, picasa_album_url(picasa_album) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
