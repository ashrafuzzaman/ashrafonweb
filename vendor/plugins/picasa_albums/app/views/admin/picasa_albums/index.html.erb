<div id='actions'>
  <ul>
    <li>
      <%= render :partial => "/shared/admin/search", :locals => {:url => admin_picasa_albums_url} %>
    </li>
    <li>
      <%= link_to "Create New Picasa Album", new_admin_picasa_album_url, :class => "add_icon" %>
    </li>
  <% if !searching? and PicasaAlbum.count > 1 %>
    <li>
      <%= link_to t('refinery.reorder', :what => "Picasa Albums"), admin_picasa_albums_url, :id => "reorder_action", :class => "reorder_icon" %>
      <%= link_to t('refinery.reorder_done', :what => "Picasa Albums"), admin_picasa_albums_url, :id => "reorder_action_done", :style => "display: none;", :class => "reorder_icon" %>
    </li>
  <% end %>
  </ul>
</div>
<div id='records'>
  <% if searching? %>
    <h2><%= t('admin.search_results_for', :query => params[:search]) %></h2>
    <% if @picasa_albums.any? %>
      <%= render :partial => "picasa_album", :collection => @picasa_albums %>
    <% else %>
      <p><%= t('admin.search_no_results') %></p>
    <% end %>
  <% else %>
    <% if @picasa_albums.any? %>
      <%= will_paginate @picasa_albums, :previous_label => '&laquo;', :next_label => '&raquo;' %>
      <%= render :partial => "sortable_list" %>
      <%= will_paginate @picasa_albums, :previous_label => '&laquo;', :next_label => '&raquo;' %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>
<%= render :partial => "/shared/admin/make_sortable", :locals => {:tree => false } if !searching? and PicasaAlbum.count > 1 %>
