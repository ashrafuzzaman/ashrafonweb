<% form_for [:admin, @picasa_album] do |f| -%>
  <%= f.error_messages %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger' -%>
  </div>
  
  <div class='field'>
    <%= f.label :image_per_page -%>
    <%= f.text_field :image_per_page -%>
  </div>
  
  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_area :description, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :album_url -%>
    <%= f.text_field :album_url -%>
  </div>
  
  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.picasa_albums.picasa_album.delete')
              } %>
<% end -%>
