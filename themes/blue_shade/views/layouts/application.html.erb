<% js_caching = RefinerySetting.find_or_set(:use_resource_caching, Rails.root.join('public', 'javascripts', 'cache').writable?) -%>
<% content_for :head do %>
  <%= jquery_include_tags(:caching => js_caching) %>

  <link href="/theme/stylesheets/corner.css" media="screen" rel="stylesheet" type="text/css" />

  <script type="text/javascript" src="/theme/javascripts/jquery.accordion.js"></script>
  <script type="text/javascript" src="/theme/javascripts/pngcorners.js"></script>
  <script type="text/javascript" src="/theme/javascripts/default.js"></script>
  <script type="text/javascript" src="/theme/javascripts/speech.js"></script>

  <script type="text/javascript">
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
  </script>

  <script type="text/javascript">
    try {
      var pageTracker = _gat._getTracker("UA-4577165-2");
      pageTracker._trackPageview();
    } catch(err) {}
  </script>

  <script type="text/javascript">
    $(document).ready(function(){
      initialize();
    });
    window.onload = sayHello;
  </script>
<% end %>

